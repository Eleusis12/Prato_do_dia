@model Trabalho_Laboratorio.Models.Clientes

@{
	ViewData["Title"] = "Details";
}

<h1>Detalhes do Cliente</h1>

<div class="container">
	<div class="row">
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Nome)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Nome)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Apelido)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Apelido)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.IdClienteNavigation.Email)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.IdClienteNavigation.Email)
			</dd>
			<dt class="col-sm-2">
				Morada
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.IdClienteNavigation.EnderecoCodigoPostal),@Html.DisplayFor(model => model.IdClienteNavigation.EnderecoLocalidade)&nbsp;&nbsp;@Html.DisplayFor(model => model.IdClienteNavigation.EnderecoMorada)
			</dd>
		</dl>
	</div>
</div>