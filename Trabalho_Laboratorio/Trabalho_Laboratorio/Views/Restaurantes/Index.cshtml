@model IEnumerable<Trabalho_Laboratorio.Models.Restaurante>

@{
	ViewData["Title"] = "Index";
}

<h1>Lista Restaurantes</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.NomeRestaurante)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Foto)
			</th>

			<th>
				@Html.DisplayNameFor(model => model.TipoServico)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DiaDeDescanso)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IdRestauranteNavigation)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.NomeRestaurante)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefone)
				</td>
				<td>
					<img src="@Html.DisplayFor(modelItem => item.Foto)" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TipoServico)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DiaDeDescanso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdRestauranteNavigation.Email)
				</td>
			</tr>
		}
	</tbody>
</table>