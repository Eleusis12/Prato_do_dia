@model IEnumerable<Trabalho_Laboratorio.Models.Restaurante>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.NomeRestaurante)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Foto)
			</th>

			<th>
				@Html.DisplayNameFor(model => model.TipoServico)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DiaDeDescanso)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IdRestauranteNavigation)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.NomeRestaurante)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefone)
				</td>
				<td>
					<img src="@Html.DisplayFor(modelItem => item.Foto)" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TipoServico)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DiaDeDescanso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdRestauranteNavigation.Email)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.IdRestaurante">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.IdRestaurante">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.IdRestaurante">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>