@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="container">

	<div class="row">

		<div class="col-md-10 mx-auto login-form">
			<h2>Registe a sua conta</h2>
			<hr />
			<form id="account" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group row">
					<div class="col-sm-6">
						<label asp-for="Input.Email" class="control-label"></label>
						<input asp-for="Input.Email" class="form-control" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<div class="col-sm-6">

						<label asp-for="Input.EnderecoMorada" class="control-label"></label>
						<input asp-for="Input.EnderecoMorada" class="form-control" />
						<span asp-validation-for="Input.EnderecoMorada" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-sm-6">
						<label asp-for="Input.Username" class="control-label"></label>
						<input asp-for="Input.Username" class="form-control" />
						<span asp-validation-for="Input.Username" class="text-danger"></span>
					</div>
					<div class="col-sm-2">

						<label asp-for="Input.EnderecoCodigoPostal" class="control-label"></label>
						<input asp-for="Input.EnderecoCodigoPostal" id="cep" class="form-control" />
						<span asp-validation-for="Input.EnderecoCodigoPostal" class="text-danger"></span>
					</div>
					<div class="col-sm-4 ">

						<label asp-for="Input.EnderecoLocalidade" class="control-label"></label>
						<input asp-for="Input.EnderecoLocalidade" class="form-control" />
						<span asp-validation-for="Input.EnderecoLocalidade" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-sm-6">

						<label asp-for="Input.Password" class="control-label"></label>
						<input asp-for="Input.Password" type="password" class="form-control" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
					<div class="col-sm-6">

						<label asp-for="Input.Role" class=" control-label"></label>
						<select asp-for="Input.Role" class="form-control" asp-items='new SelectList(ViewBag.roles, "Name", "Name")'>
							<option selected=""> --  Seleciona o tipo </option>
						</select>
						<span asp-validation-for="Input.Role" class="text-danger"></span>

						@if (ViewData["Tipo_Cliente"] != null)
						{
							<span class="text-danger">@ViewData["Tipo_Cliente"]</span>
						}
					</div>
				</div>

				<div class="form-group row">
					<div class="col-sm-6">

						<label asp-for="Input.ConfirmPassword" class="control-label"></label>
						<input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
						<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<input type="submit" value="Registar" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
	$(document).ready(function () {
		var $campo = $("#cep");
		$campo.mask('0000-000', { reverse: true });
	});
</script>