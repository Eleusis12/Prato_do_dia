@page

@model LockoutModel
@{
	ViewData["Title"] = "Locked out";
}

<header>
	<h1 class="text-danger">@ViewData["Title"]</h1>
	<p class="text-danger">@Model.Input.Username, Esta conta foi bloqueada, contacte o administrador para verificar a sua situação.</p>
</header>

<h4>@ViewData["Title"]</h4>
@if (@Model.Input.MotivoBloqueio != null)
{
	<div class="row rounded bg-light">
		<div class="col-md-6">

			<p class="text-body">Motivo de Bloqueio: @Model.Input.MotivoBloqueio</p>
		</div>
	</div>

}