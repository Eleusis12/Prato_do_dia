@page
@model Trabalho_Laboratorio.Areas.Identity.Pages.Account.Manage.AlertasModel
@{
	ViewData["Title"] = "Alertas";
	ViewData["ActivePage"] = ManageNavPages.Alertas;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="container alert alert-light ">
	<br>
	<input id="search" type="text" class="form-control" placeholder="O teu Alerta...">
	<div class="container table-responsive py-5">
		@await Html.PartialAsync("_PartialAlerts", Model.ListaPalavrasAlertar)
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

